<div id="<%= dom_id event %>">
  <h3 class="card-title"><%= link_to event.name, event, class: "text-decoration-none text-black" %></h3>
    <p>
      <%= event.description.truncate(150) %>
    </p>
   <ul class="list-group list-group-flush">
   <div>
      <li class="list-group-item">
        <p>
          <i class="bi bi-geo-alt"></i>
          <%= event.location %>
        </p>
      </li>
      <li class="list-group-item">
        <p>
          <i class="bi bi-calendar-date"></i>
          <%= event.date %>
        </p>
      </li>
   </div>
   <div>
    <li class="list-group-item">
      <p>
        <strong>Hosted by:</strong>
        <%= event.creator.name %>
      </p>
    </li>
   </div>
  </ul>
</div>
